<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
  </div>

  <input type="hidden" name="post[user_id]" value="<%= session[:user_id] %>" />

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
