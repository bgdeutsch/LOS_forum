<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <% if current_user.isadmin? %>
    <%= f.label :sticky %>
    <%= f.check_box :sticky %>
    <% end %>
  </div>


  <input type="hidden" name="post[user_id]" value="<%= session[:user_id] %>" />

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
