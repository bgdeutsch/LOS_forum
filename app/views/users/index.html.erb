<p id="notice"><%= notice %></p>

<h2>Users</h2>

<div class='user_listing'>
  <% @users.each do |user| %>
    <%= image_tag user.avatar.url(:thumb), class: 'image_float_left' %>
    <span class='left'>
      <%= link_to user.name, user %></br>
      <%= user.email %>
    </span>

    <span class='right'>
      Posts: <%= user.posts.count %></br>
      Member since: <%= user.created_at.strftime("%m/%d/%Y") %></br>

    <% if current_user.isadmin? %>
      <%= link_to "delete", user, method: :delete,
      data: { confirm: "You sure?" } %>
    <% end %>
    </span>
  <% end %>
</div>
